@using TravelTripProje.Models.Siniflar
@model List<Blog>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Blog Listesi</h2>

<a href="/Admin/YeniBlog/" class="btn btn-primary" style="margin-bottom:30px">Yeni Blog</a>


<table id="tbl1" class="table table-bordered">

    <tr>
        <th>ID</th>
        <th>BAŞLIK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>

    </tr>


    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.Baslik</td>
            <td><a href="/Admin/BlogSil/@x.ID" class="btn btn-danger">SİL</a></td>
            <td><a href="/Admin/BlogGetir/@x.ID" class="btn btn-warning">GÜNCELLE</a></td>

        </tr>
    }

</table>

