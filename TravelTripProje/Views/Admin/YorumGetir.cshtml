@model TravelTripProje.Models.Siniflar.Yorumlar


@{
    ViewBag.Title = "YorumGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Yorum Getir</h2>
<br />

@using (Html.BeginForm("YorumYayinla", "Admin", FormMethod.Post))
{

    @Html.LabelFor(p => p.ID)
    @Html.TextBoxFor(p => p.ID, new { @class = "form-control", @readonly = "readonly" })
    <br />

    @Html.LabelFor(p => p.KullaniciAdi)
    @Html.TextBoxFor(p => p.KullaniciAdi, new { @class = "form-control", @ReadOnly = "ReadaOnly" })
    <br />


    @Html.LabelFor(p => p.Mail)
    @Html.TextBoxFor(p => p.Mail, new { @class = "form-control", @ReadOnly = "ReadaOnly" })
    <br />


    @Html.LabelFor(p => p.Yorum)
    @Html.TextAreaFor(p => p.Yorum, 3, 5, new { @class = "form-control", @ReadOnly = "ReadaOnly" })
    <br />

    <button class="btn btn-primary">YAYINLA</button>
  

}




